<UserControl x:Class="Do_An.NVQL_BC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="650" d:DesignWidth="1100"
             Background="#F5F7FA">

    <UserControl.Resources>
        <!-- Khối định nghĩa màu sắc -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#1F456E"/>
        <SolidColorBrush x:Key="AccentColor" Color="#1ABC9C"/>
        <SolidColorBrush x:Key="ButtonHoverColor" Color="#2A6496"/>
        <SolidColorBrush x:Key="AccentHoverColor" Color="#16A085"/>
        <SolidColorBrush x:Key="GreyHoverColor" Color="#DCDCDC"/>
        <SolidColorBrush x:Key="SecondaryButtonColor" Color="#607D8B"/>
        <SolidColorBrush x:Key="SecondaryButtonHoverColor" Color="#78909C"/>

        <!-- Style nhãn cho bộ lọc -->
        <Style TargetType="TextBlock" x:Key="FilterLabelStyle">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="10,0,10,0"/>
        </Style>

        <!-- Style cơ bản cho các nút bấm -->
        <Style TargetType="Button" x:Key="PrimaryButtonStyle">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="140"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource ButtonHoverColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho nút Xuất file (Accent Color) -->
        <Style TargetType="Button" x:Key="ExportButtonStyle" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Width" Value="110"/>
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentHoverColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho nút quay lại (Secondary Color) -->
        <Style TargetType="Button" x:Key="BackButtonPrimaryStyle" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Width" Value="140"/>
            <Setter Property="Background" Value="{StaticResource SecondaryButtonColor}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource SecondaryButtonHoverColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <Border Background="{StaticResource PrimaryColor}" Padding="15" CornerRadius="8">
            <TextBlock Text="BÁO CÁO &amp; THỐNG KÊ DỮ LIỆU"
                       Foreground="White"
                       FontSize="24"
                       FontWeight="Bold"
                       TextAlignment="Center"/>
        </Border>

        <!-- Bộ lọc (Đã chuyển sang Grid để cân đối bố cục) -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="15" Margin="0, 20, 0, 10" BorderBrush="#E0E0E0" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Hàng 1: Loại báo cáo & Lớp học -->
                <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Margin="10,5">
                    <TextBlock Text="Loại báo cáo:" Style="{StaticResource FilterLabelStyle}" Width="110"/>
                    <ComboBox x:Name="cbReportType" Width="200" Height="40" FontSize="15" SelectedIndex="0" Padding="10, 0" VerticalContentAlignment="Center" BorderBrush="#DCDCDC" BorderThickness="1">
                        <ComboBoxItem Content="Danh sách học viên theo lớp"/>
                        <ComboBoxItem Content="Báo cáo điểm theo lớp / môn"/>
                        <ComboBoxItem Content="Báo cáo học phí"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" Margin="10,5">
                    <TextBlock Text="Lớp học:" Style="{StaticResource FilterLabelStyle}" Width="70"/>
                    <ComboBox x:Name="cbLop" Width="180" Height="40" FontSize="15" Padding="10, 0" VerticalContentAlignment="Center" BorderBrush="#DCDCDC" BorderThickness="1"/>
                </StackPanel>

                <!-- Hàng 2 (Cột 0): Môn học -->
                <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" Margin="10,5">
                    <TextBlock Text="Môn học:" Style="{StaticResource FilterLabelStyle}" Width="110"/>
                    <ComboBox x:Name="cbMon" Width="200" Height="40" FontSize="15" Padding="10, 0" VerticalContentAlignment="Center" BorderBrush="#DCDCDC" BorderThickness="1"/>
                </StackPanel>

                <!-- Hàng 2 (Cột 1): Từ khóa -->
                <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1" Margin="10,5">
                    <TextBlock Text="Từ khóa:" Style="{StaticResource FilterLabelStyle}" Width="70"/>
                    <TextBox x:Name="txtKeyword" Width="180" Height="40" FontSize="15" Padding="5" VerticalContentAlignment="Center" BorderBrush="#DCDCDC" BorderThickness="1"
                             Text="Nhập từ khóa..." Foreground="#888888" GotFocus="txtKeyword_GotFocus" LostFocus="txtKeyword_LostFocus"/>
                </StackPanel>

                <!-- Nút bấm (Căn giữa theo chiều dọc, nằm ở cột cuối cùng) -->
                <StackPanel Grid.Row="0" Grid.RowSpan="2" Grid.Column="2" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0,0,0">
                    <Button x:Name="BtnGenerate" Content="Xem báo cáo" Style="{StaticResource PrimaryButtonStyle}" Click="BtnGenerate_Click" Margin="5, 5"/>
                    <Button x:Name="BtnExport" Content="Xuất CSV" Style="{StaticResource ExportButtonStyle}" Click="BtnExport_Click" Margin="5, 5"/>
                </StackPanel>

            </Grid>
        </Border>

        <!-- Bảng dữ liệu -->
        <Border Grid.Row="2" Background="White" CornerRadius="10"
                BorderBrush="#E0E0E0" BorderThickness="1" Padding="1">
            <DataGrid x:Name="dgReport"
                      AutoGenerateColumns="True"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      GridLinesVisibility="All"
                      HeadersVisibility="Column"
                      AlternatingRowBackground="#F9F9F9"
                      RowHeight="40"
                      FontSize="14"
                      BorderThickness="0"
                      VerticalScrollBarVisibility="Auto"
                      SelectionChanged="dgReport_SelectionChanged">
                <DataGrid.Resources>
                    <Style TargetType="{x:Type DataGridColumnHeader}">
                        <Setter Property="Background" Value="#EAF2F8"/>
                        <Setter Property="Foreground" Value="{StaticResource PrimaryColor}"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Height" Value="45"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    </Style>
                </DataGrid.Resources>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>
