<UserControl x:Class="Do_An.NVQL_QLD"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F8FAFC">

    <UserControl.Resources>
        <!-- Style nút chung -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Height" Value="38"/>
            <Setter Property="MinWidth" Value="110"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="#888" Opacity="0.25"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1E3A8A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style nút quay lại -->
        <Style x:Key="BackButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#E5E7EB"/>
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="Effect" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,2">
                                <TextBlock Text="←" FontSize="18" Margin="0,0,5,0"/>
                                <TextBlock Text="Quay về" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D1D5DB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style textbox, combobox -->
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <Border Grid.Row="0" Background="#1E3A8A" CornerRadius="10" Padding="14" Margin="0,0,0,18">
            <DockPanel>
                <TextBlock Text="QUẢN LÝ ĐIỂM HỌC VIÊN"
                           Foreground="White"
                           FontSize="22"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           DockPanel.Dock="Right"
                           Margin="0,0,120,0"/>
            </DockPanel>
        </Border>

        <!-- Bộ lọc -->
        <Border Grid.Row="1"
                Background="White"
                Padding="15"
                CornerRadius="10"
                Margin="0,0,0,18"
                BorderBrush="#E2E8F0"
                BorderThickness="1">
            <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
                <TextBlock Text="Khóa học:" VerticalAlignment="Center" Width="80"/>
                <ComboBox x:Name="cbKhoaHoc" Width="160" DisplayMemberPath="TenKH" SelectedValuePath="MaKH"
                          SelectionChanged="cbKhoaHoc_SelectionChanged"/>

                <TextBlock Text="Lớp:" VerticalAlignment="Center" Width="60" Margin="10,0,0,0"/>
                <ComboBox x:Name="cbLopHoc" Width="160" DisplayMemberPath="TenLop" SelectedValuePath="MaLop"
                          SelectionChanged="cbLopHoc_SelectionChanged"/>

                <TextBlock Text="Môn học:" VerticalAlignment="Center" Width="80" Margin="10,0,0,0"/>
                <ComboBox x:Name="cbMonHoc" Width="160" DisplayMemberPath="TenMon" SelectedValuePath="MaMH"
                          SelectionChanged="cbMonHoc_SelectionChanged"/>

                <TextBlock Text="Học viên:" VerticalAlignment="Center" Width="80" Margin="10,0,0,0"/>
                <Grid Width="200" Height="35" Margin="5">
                    <TextBox x:Name="txtMaHV" Padding="8,4" TextChanged="txtMaHV_TextChanged"/>
                    <TextBlock x:Name="txtPlaceholder"
                               Text="Nhập mã học viên"
                               Foreground="Gray"
                               IsHitTestVisible="False"
                               Margin="10,0,0,0"
                               VerticalAlignment="Center"
                               FontStyle="Italic"
                               Visibility="Visible"/>
                </Grid>

                <Button x:Name="btnTimKiem" Content="Tìm kiếm" Style="{StaticResource PrimaryButton}" Width="120" Margin="10,0"/>
                <Button x:Name="btnLamMoi" Content="Làm mới" Style="{StaticResource PrimaryButton}" Width="120"/>
            </WrapPanel>
        </Border>

        <!-- Bảng dữ liệu -->
        <Border Grid.Row="2"
                Background="White"
                CornerRadius="10"
                Padding="10"
                BorderBrush="#E2E8F0"
                BorderThickness="1"
                VerticalAlignment="Stretch">
            <DataGrid x:Name="dgDiem"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      IsReadOnly="True"
                      AlternatingRowBackground="#F9FAFB"
                      HeadersVisibility="Column"
                      GridLinesVisibility="Horizontal"
                      RowHeight="35"
                      FontSize="14"
                      BorderThickness="0"
                      SelectionMode="Single"
                      SelectionUnit="FullRow">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Mã HV" Binding="{Binding MaHV}" Width="*" />
                    <DataGridTextColumn Header="Tên học viên" Binding="{Binding HoTen}" Width="2*" />
                    <DataGridTextColumn Header="Tên lớp" Binding="{Binding TenLop}" Width="2*" />
                    <DataGridTextColumn Header="Môn học" Binding="{Binding TenMonHoc}" Width="2*" />
                    <DataGridTextColumn Header="Khóa học" Binding="{Binding TenKH}" Width="2*" />
                    <DataGridTextColumn Header="Điểm giữa kỳ" Binding="{Binding DiemGK}" Width="*" />
                    <DataGridTextColumn Header="Điểm cuối kỳ" Binding="{Binding DiemCK}" Width="*" />
                    <DataGridTextColumn Header="Điểm TB" Binding="{Binding DiemTB}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>
