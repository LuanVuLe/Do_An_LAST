<UserControl x:Class="Do_An.NVQL_DKHV"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Do_An"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="980"
             Background="#F3F4F6"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             MinWidth="540" MaxWidth="980">

    <UserControl.Resources>
        <!-- Styles lược lại (giữ nguyên theo của bạn) -->
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="DatePicker">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#EAF3FF"/>
            <Setter Property="Foreground" Value="#1E40AF"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="5,0,5,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D8EBFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#BBDDFD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border CornerRadius="12" BorderBrush="#D1D5DB" BorderThickness="1" Padding="24" Margin="0" Background="White">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="40" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" MinWidth="360" MaxWidth="920">
                    <TextBlock Text="ĐĂNG KÝ HỌC VIÊN" 
                               FontSize="22" FontWeight="Bold" Foreground="#1E3A8A"
                               HorizontalAlignment="Center" Margin="0,0,0,16"/>

                    <!-- Họ và tên -->
                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="Họ và tên:" FontWeight="SemiBold" Foreground="#374151"/>
                        <TextBox x:Name="txtHoTen"/>
                    </StackPanel>

                    <!-- CCCD -->
                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="Số căn cước công dân:" FontWeight="SemiBold" Foreground="#374151"/>
                        <TextBox x:Name="txtCCCD" MaxLength="12" ToolTip="Nhập 12 chữ số CCCD"/>
                    </StackPanel>

                    <!-- Ngày sinh -->
                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="Ngày sinh:" FontWeight="SemiBold" Foreground="#374151"/>
                        <DatePicker x:Name="dpNgaySinh"/>
                    </StackPanel>

                    <!-- Giới tính -->
                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="Giới tính:" FontWeight="SemiBold" Foreground="#374151"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <RadioButton x:Name="rbNam" Content="Nam" GroupName="GioiTinh" Margin="0,0,20,0"/>
                            <RadioButton x:Name="rbNu" Content="Nữ" GroupName="GioiTinh"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Trình độ -->
                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="Trình độ (kết quả test):" FontWeight="SemiBold" Foreground="#374151"/>
                        <ComboBox x:Name="cbTrinhDo">
                            <ComboBoxItem Content="Beginner"/>
                            <ComboBoxItem Content="Intermediate"/>
                            <ComboBoxItem Content="Advanced"/>
                            <ComboBoxItem Content="N5"/>
                            <ComboBoxItem Content="N4"/>
                            <ComboBoxItem Content="N3"/>
                            <ComboBoxItem Content="IELTS 5.0"/>
                            <ComboBoxItem Content="IELTS 6.0"/>
                            <ComboBoxItem Content="IELTS 7.0+"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- SĐT -->
                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="Số điện thoại:" FontWeight="SemiBold" Foreground="#374151"/>
                        <TextBox x:Name="txtSDT"/>
                    </StackPanel>

                    <!-- Email -->
                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="Email:" FontWeight="SemiBold" Foreground="#374151"/>
                        <TextBox x:Name="txtEmail"/>
                    </StackPanel>

                    <!-- Địa chỉ -->
                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="Địa chỉ:" FontWeight="SemiBold" Foreground="#374151"/>
                        <TextBox x:Name="txtDiaChi" Height="70" TextWrapping="Wrap" AcceptsReturn="True"/>
                    </StackPanel>

                    <!-- Khóa học -->
                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="Khóa học:" FontWeight="SemiBold" Foreground="#374151"/>
                        <ComboBox x:Name="cbKhoaHoc"
                                  DisplayMemberPath="TenKH"
                                  SelectedValuePath="MaKH"
                                  SelectionChanged="cbKhoaHoc_SelectionChanged"/>
                    </StackPanel>

                    <!-- Môn học -->
                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="Môn học:" FontWeight="SemiBold" Foreground="#374151"/>
                        <ComboBox x:Name="cbMonHoc"
                                  DisplayMemberPath="TenMH"
                                  SelectedValuePath="MaMH"
                                  SelectionChanged="cbMonHoc_SelectionChanged"/>
                    </StackPanel>

                    <!-- Lớp học phù hợp -->
                    <StackPanel Margin="0,0,0,14">
                        <TextBlock Text="Lớp học phù hợp (còn chỗ):" FontWeight="SemiBold" Foreground="#374151"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <ComboBox x:Name="cbLopHoc" 
                                      Grid.Column="0"
                                      DisplayMemberPath="HienThi" 
                                      SelectedValuePath="MaLop"
                                      ToolTip="Hiển thị: Tên lớp (Còn chỗ: X)"/>

                            <!-- nút tạo lớp nhanh (đã khai báo để code-behind dùng) -->
                            <Button x:Name="btnTaoLopNhanh" 
                                    Grid.Column="1" 
                                    Content="➕ Tạo lớp riêng" 
                                    Style="{StaticResource ActionButton}" 
                                    Width="120" Margin="10,0,0,0" 
                                    Height="35"
                                    Visibility="Collapsed" 
                                    Click="btnTaoLopNhanh_Click"
                                    ToolTip="Tạo lớp mới cho nhóm này nếu không có lớp phù hợp"/>
                        </Grid>
                    </StackPanel>

                    <!-- Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">
                        <Button x:Name="btnDangKy" Content="Đăng ký" Width="120" Height="38" Style="{StaticResource ActionButton}" Click="btnDangKy_Click"/>
                        <Button x:Name="btnLamMoi" Content="Làm mới" Width="120" Height="38" Style="{StaticResource ActionButton}" Click="btnLamMoi_Click"/>
                        <Button x:Name="btnThoat" Content="Thoát" Width="120" Height="38" Style="{StaticResource ActionButton}" Click="btnThoat_Click"/>
                    </StackPanel>
                </StackPanel>

                <Grid Grid.Column="1"/>
            </Grid>
        </ScrollViewer>
    </Border>
</UserControl>
