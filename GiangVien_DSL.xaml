<Window x:Class="Do_An.GiangVien_DSL"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lịch Giảng Dạy" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F8FB">

    <Window.Resources>
        <!-- Style cho header thứ -->
        <Style x:Key="ThuHeader" TargetType="TextBlock">
            <Setter Property="Background" Value="#2C89C9"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <DockPanel Margin="10">

        <!-- Header -->
        <Border DockPanel.Dock="Top" Background="#2C89C9" Padding="12" CornerRadius="5">
            <TextBlock Text="THÔNG TIN THỜI KHÓA BIỂU GIẢNG VIÊN"
                       Foreground="White"
                       FontSize="20"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Bộ lọc -->
        <Grid DockPanel.Dock="Top" Margin="0,15,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="Chọn học kỳ:"
                       VerticalAlignment="Center"
                       FontWeight="Bold"/>
            <ComboBox x:Name="cbHocKy"
                      Grid.Column="1"
                      Width="200"
                      VerticalAlignment="Center"
                      Margin="10,0,0,0"/>

            <TextBlock Grid.Column="3"
                       Text="Chọn tuần:"
                       VerticalAlignment="Center"
                       FontWeight="Bold"/>
            <ComboBox x:Name="cbTuan"
                      Grid.Column="4"
                      Width="180"
                      VerticalAlignment="Center"
                      Margin="10,0,0,0"/>

            <Button x:Name="btnTaiLich"
                    Grid.Column="6"
                    Content="Tải thời khóa biểu"
                    Width="170"
                    Height="35"
                    Margin="10,0,0,0"
                    Background="#2C89C9"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderBrush="{x:Null}"
                    Cursor="Hand"
                    Click="btnTaiLich_Click"/>
        </Grid>

        <!-- Lưới thời khóa biểu -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header thứ -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="#2C89C9" BorderBrush="White" BorderThickness="0,0,1,0"/>

                <TextBlock Grid.Column="1" Text="THỨ 2" Style="{StaticResource ThuHeader}"/>
                <TextBlock Grid.Column="2" Text="THỨ 3" Style="{StaticResource ThuHeader}"/>
                <TextBlock Grid.Column="3" Text="THỨ 4" Style="{StaticResource ThuHeader}"/>
                <TextBlock Grid.Column="4" Text="THỨ 5" Style="{StaticResource ThuHeader}"/>
                <TextBlock Grid.Column="5" Text="THỨ 6" Style="{StaticResource ThuHeader}"/>
                <TextBlock Grid.Column="6" Text="THỨ 7" Style="{StaticResource ThuHeader}"/>
                <TextBlock Grid.Column="7" Text="CHỦ NHẬT" Style="{StaticResource ThuHeader}"/>
            </Grid>

            <!-- Dữ liệu -->
            <ScrollViewer Grid.Row="1">
                <UniformGrid x:Name="grdTKB" Columns="8" Rows="15" Margin="0,5,0,0">
                    <!-- Các ô sẽ được sinh trong code-behind -->
                </UniformGrid>
            </ScrollViewer>
        </Grid>
    </DockPanel>
</Window>
