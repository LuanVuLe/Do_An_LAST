<Window x:Class="DoAn.GiaoDien_HocVien"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StarEnglish - Dashboard" 
        Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F3F6F8">

    <Window.Resources>
        <!-- Button Style cho sidebar -->
        <Style x:Key="SidebarButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" Padding="8">
                            <ContentPresenter HorizontalAlignment="Left"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#26FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Main content -->
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <Border Grid.Column="0" Background="#0097A7" CornerRadius="0,10,10,0" Margin="0,0,745,0" Grid.ColumnSpan="2">
            <StackPanel VerticalAlignment="Stretch">

                <!-- Logo -->
                <Border Background="White" CornerRadius="8" Margin="20" Padding="10">
                    <Image Source="/z7036210694201_63d938153e736b3845a0879b23f5abd4.jpg" Stretch="Fill" Height="120"/>
                </Border>

                <!-- Menu Buttons -->
                <StackPanel>
                    <Button Style="{StaticResource SidebarButton}" Click="BtnProfile_Click">
                        <StackPanel Orientation="Horizontal" Margin="10,0">
                            <Image Source="imagee/user.png" Width="24" Margin="0,0,10,0"/>
                            <TextBlock Text="Hồ sơ học viên"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SidebarButton}" Click="BtnStudy_Click">
                        <StackPanel Orientation="Horizontal" Margin="10,0">
                            <Image Source="imagee/book.png" Width="24" Margin="0,0,10,0"/>
                            <TextBlock Text="Học vụ"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SidebarButton}" Click="BtnFee_Click">
                        <StackPanel Orientation="Horizontal" Margin="10,0">
                            <Image Source="imagee/money.png" Width="24" Margin="0,0,10,0"/>
                            <TextBlock Text="Học phí"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource SidebarButton}" Click="BtnSurvey_Click">
                        <StackPanel Orientation="Horizontal" Margin="10,0">
                            <Image Source="imagee/survey.png" Width="24" Margin="0,0,10,0"/>
                            <TextBlock Text="Khảo sát"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- MAIN CONTENT -->
        <Border Grid.Column="1" Background="White" CornerRadius="10" Margin="5" Padding="20">
            <TextBlock x:Name="lblContent" Text="Chào mừng bạn đến với StarEnglish!"
                       FontSize="24" FontWeight="Bold" Foreground="#333"
                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
