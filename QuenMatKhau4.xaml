<Window x:Class="Do_An.QuenMatKhau4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đặt lại mật khẩu"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA"
        Height="520" Width="480"
        ResizeMode="NoResize">
    <Window.Resources>
        <Style x:Key="PillButton" TargetType="Button">
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="25" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="InputBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Background" Value="#FCFDFF"/>
            <Setter Property="BorderBrush" Value="#E6EEF8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Border Width="420" Height="440" CornerRadius="25" Background="White" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="18" ShadowDepth="4" Opacity="0.12"/>
            </Border.Effect>

            <StackPanel Margin="28" HorizontalAlignment="Center">
                <TextBlock Text="Đặt lại mật khẩu" FontSize="26" FontWeight="Bold" Foreground="#2C3E50" HorizontalAlignment="Center"/>
                <TextBlock Text="Mật khẩu mới phải gồm chữ, số, ký tự đặc biệt và dài từ 8–20 ký tự."
                           TextWrapping="Wrap" FontSize="13" Foreground="#7f8c8d" Margin="0,10,0,22" TextAlignment="Center"/>

                <TextBlock Text="Mật khẩu mới" FontSize="12" Margin="6,0,0,6" Foreground="#34495e"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,14">
                    <Border Style="{StaticResource InputBorder}" Width="300" Height="44" VerticalAlignment="Center">
                        <Grid>
                            <PasswordBox x:Name="pwdNew" HorizontalAlignment="Stretch" VerticalAlignment="Center"
                                         Margin="10,0" Background="Transparent" BorderThickness="0" FontSize="14"/>
                            <TextBox x:Name="txtNewVisible" HorizontalAlignment="Stretch" VerticalAlignment="Center"
                                     Margin="10,0" Background="Transparent" BorderThickness="0" FontSize="14" Visibility="Collapsed"/>
                        </Grid>
                    </Border>

                    <Button x:Name="btnToggleNew" Width="44" Height="44" Margin="10,0,0,0" Cursor="Hand"
                            Background="#F1F5F8" BorderBrush="#E0E6EB" Click="btnToggleNew_Click" ToolTip="Hiện/Ẩn mật khẩu">
                        <TextBlock Text="👁" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button>
                </StackPanel>

                <TextBlock Text="Xác nhận mật khẩu" FontSize="12" Margin="6,0,0,6" Foreground="#34495e"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,24">
                    <Border Style="{StaticResource InputBorder}" Width="300" Height="44" VerticalAlignment="Center">
                        <Grid>
                            <PasswordBox x:Name="pwdConfirm" HorizontalAlignment="Stretch" VerticalAlignment="Center"
                                         Margin="10,0" Background="Transparent" BorderThickness="0" FontSize="14"/>
                            <TextBox x:Name="txtConfirmVisible" HorizontalAlignment="Stretch" VerticalAlignment="Center"
                                     Margin="10,0" Background="Transparent" BorderThickness="0" FontSize="14" Visibility="Collapsed"/>
                        </Grid>
                    </Border>

                    <Button x:Name="btnToggleConfirm" Width="44" Height="44" Margin="10,0,0,0" Cursor="Hand"
                            Background="#F1F5F8" BorderBrush="#E0E6EB" Click="btnToggleConfirm_Click" ToolTip="Hiện/Ẩn mật khẩu">
                        <TextBlock Text="👁" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button>
                </StackPanel>

                <Button x:Name="btnChange" Style="{StaticResource PillButton}" Width="320" Height="48" Margin="0,0,0,12"
                        Click="btnChange_Click" Cursor="Hand" FontSize="15" FontWeight="SemiBold">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#00C896" Offset="0"/>
                            <GradientStop Color="#00E0FF" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                    <TextBlock Text="Xác nhận đổi mật khẩu" HorizontalAlignment="Center" />
                </Button>

                <TextBlock Text="← Quay về đăng nhập" Foreground="#2980B9" FontSize="14" HorizontalAlignment="Center" Cursor="Hand"
                           MouseLeftButtonUp="BackToLogin_MouseLeftButtonUp"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
