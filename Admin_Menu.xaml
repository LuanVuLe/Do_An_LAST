<UserControl x:Class="Do_An.Admin_Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#f5f7fa">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" CornerRadius="10" Margin="0,0,0,15">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#1E88E5" Offset="0"/>
                    <GradientStop Color="#1565C0" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <DockPanel Margin="12">
                <TextBlock Text="🏠 Trang chủ"
                           Foreground="White"
                           FontSize="22"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           DockPanel.Dock="Left"/>
            </DockPanel>
        </Border>

        <!-- Nội dung -->
        <StackPanel Grid.Row="1" Margin="10">
            <!-- Lời chào -->
            <Border Background="White" CornerRadius="12" Padding="20" Margin="0,0,0,15" BorderBrush="#ddd" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Xin chào 👋" FontSize="20" FontWeight="Bold" Foreground="#1E88E5"/>
                    <TextBlock Text="Chào mừng bạn đến với hệ thống quản lý trung tâm ngoại ngữ." 
                               FontSize="14" Foreground="Gray" Margin="0,8,0,0"/>
                </StackPanel>
            </Border>

            <!-- Thống kê nhanh -->
            <UniformGrid Columns="3" Rows="1" Margin="0,10,0,0">
                <!-- Tổng tài khoản -->
                <Border Background="#E3F2FD" CornerRadius="12" Padding="20" Margin="8" BorderBrush="#90CAF9" BorderThickness="1">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="👤" FontSize="28" TextAlignment="Center"/>
                        <TextBlock Text="Nhân viên" FontWeight="Bold" FontSize="16" Foreground="#1565C0" Margin="0,6,0,0"/>
                        <TextBlock x:Name="lblTaiKhoan" Text="0" FontSize="20" FontWeight="Bold" Foreground="Black"/>
                    </StackPanel>
                </Border>

                <!-- Tổng giáo viên -->
                <Border Background="#E8F5E9" CornerRadius="12" Padding="20" Margin="8" BorderBrush="#A5D6A7" BorderThickness="1">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="👨‍🏫" FontSize="28" TextAlignment="Center"/>
                        <TextBlock Text="Giáo viên" FontWeight="Bold" FontSize="16" Foreground="#2E7D32" Margin="0,6,0,0"/>
                        <TextBlock x:Name="lblGiaoVien" Text="0" FontSize="20" FontWeight="Bold" Foreground="Black"/>
                    </StackPanel>
                </Border>

                <!-- Tổng học viên -->
                <Border Background="#FFF3E0" CornerRadius="12" Padding="20" Margin="8" BorderBrush="#FFB74D" BorderThickness="1">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="🎓" FontSize="28" TextAlignment="Center"/>
                        <TextBlock Text="Học viên" FontWeight="Bold" FontSize="16" Foreground="#EF6C00" Margin="0,6,0,0"/>
                        <TextBlock x:Name="lblHocVien" Text="0" FontSize="20" FontWeight="Bold" Foreground="Black"/>
                    </StackPanel>
                </Border>
            </UniformGrid>
        </StackPanel>
    </Grid>
</UserControl>
