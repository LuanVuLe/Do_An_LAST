<Window x:Class="Do_An.GiaoDienDangNhap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng nhập - StarEnglish" 
        Height="520" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="White"
        ResizeMode="NoResize">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <!-- Logo -->
            <ColumnDefinition Width="3*"/>
            <!-- Form -->
        </Grid.ColumnDefinitions>

        <!-- LEFT: Logo -->
        <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Image Source="/z7036210694201_63d938153e736b3845a0879b23f5abd4.jpg" 
                   Width="360" Height="330" Stretch="Fill"/>
            <TextBlock Text="StarEnglish" FontSize="50" FontWeight="Bold" 
                       Foreground="#FF7A33" Margin="0,10,0,0" HorizontalAlignment="Right"/>
        </StackPanel>

        <!-- RIGHT: Login Form -->
        <StackPanel Grid.Column="1" Width="360" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Cổng thông tin StarEnglish"
                       FontSize="22" FontWeight="Bold" Foreground="#0097A7"
                       TextAlignment="Center" Margin="0,0,0,6"/>
            <TextBlock Text="Đăng nhập để tiếp tục" Foreground="#444" 
                       TextAlignment="Center" Margin="0,0,0,20"/>

            <!-- Username -->
            <Grid Margin="0,0,0,12">
                <Border CornerRadius="8" Background="#FBFBFB" BorderBrush="#E0E0E0" BorderThickness="1" Padding="8">
                    <TextBox x:Name="txtUsername"
                 Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center"
                 FontSize="14"/>
                </Border>
                <TextBlock Text="Tên tài khoản"
               Foreground="#9AA0A6" Margin="14,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <!-- Nếu có chữ thì ẩn -->
                                <DataTrigger Binding="{Binding Text.Length, ElementName=txtUsername}" Value="0">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Text.Length, ElementName=txtUsername}" Value="1">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

            <!-- Password -->
            <Grid Margin="0,0,0,10">
                <Border CornerRadius="8" Background="#FBFBFB" BorderBrush="#E0E0E0" BorderThickness="1" Padding="8">
                    <PasswordBox x:Name="txtPassword"
                     Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center"
                     FontSize="14"/>
                </Border>
                <TextBlock Text="Mật khẩu"
               Foreground="#9AA0A6" Margin="14,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <!-- Nếu rỗng thì hiện -->
                                <DataTrigger Binding="{Binding Password.Length, ElementName=txtPassword}" Value="0">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <!-- Nếu có chữ thì ẩn -->
                                <DataTrigger Binding="{Binding Password.Length, ElementName=txtPassword}" Value="1">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>


            <!-- Forgot Password -->
            <TextBlock Text="Quên mật khẩu?" Foreground="#2B6AD3" FontSize="12"
                       HorizontalAlignment="Right" Margin="0,0,0,10" Cursor="Hand"
                       MouseLeftButtonUp="ForgotPassword_Click"/>

            <!-- Role Selection -->
            <TextBlock Text="Chọn loại tài khoản:" Foreground="#1E9A8A" Margin="0,6,0,6" FontSize="14"/>
            <StackPanel>
                <RadioButton x:Name="rbStudent" Content="Học sinh - Phụ huynh" FontSize="15" Margin="0,2" IsChecked="True"/>
                <RadioButton x:Name="rbTeacher" Content="Giáo viên" FontSize="15" Margin="0,2"/>
                <RadioButton x:Name="rbStaff" Content="Nhân Viên" FontSize="15" Margin="0,2"/>
                <RadioButton x:Name="rbAdmin" Content="Quản lý" FontSize="15" Margin="0,2"/>
            </StackPanel>

            <!-- Login Button -->
            <Button x:Name="btnLogin" Content="Đăng nhập" Height="44" Margin="0,20,0,0" Click="btnLogin_Click" FontSize="17" FontWeight="Bold">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#FF7A33"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderBrush" Value="#FF7A33"/>
                        <Setter Property="Padding" Value="10,4"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="10" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.95"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.85"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
